@model order_and_sales_management_ver1.Models.ProductModel

@{
    ViewData["Title"] = "Düzenle";
}
<div class="panel-info">
    <h5>Kayıt Düzenleme Ekranı</h5>
</div>
<div class="alert alert-danger">
    @Html.ValidationSummary(true)
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="productID" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productBarcodeID" class="control-label"></label>
                <input asp-for="productBarcodeID" class="form-control" />
                <span asp-validation-for="productBarcodeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productRetailPrice" class="control-label"></label>
                <input asp-for="productRetailPrice" class="form-control" />
                <span asp-validation-for="productRetailPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productWholesalePrice" class="control-label"></label>
                <input asp-for="productWholesalePrice" class="form-control" />
                <span asp-validation-for="productWholesalePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Liste Ekranına Geri Dönüş</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
