@model IEnumerable<order_and_sales_management_ver1.Models.baseproduct>
@{
    ViewData["Title"] = "Liste";
}
<div class="panel-info">
    <h5>_ Ürün Listesi</h5>
</div>
<div class="alert alert-danger">
    @Html.ValidationSummary(false)
</div>
<hr />
<div class="col-md-2">
    @Html.ActionLink("Yeni Kayıt Ekle", "Create", "baseproducts", new { id = 0 }, new { @class = "btn btn-primary  btn-sm btn-block", @style = "font-size:12px", })
</div>
<div class="col-md-10">
</div>
<div class="table-responsive table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-striped table-curved table-sm" style="font-size:0.9em">
        <thead class="table-head">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.baseId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.barcodeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.retailPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.wholeSalePrice)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.baseId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.barcodeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.retailPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.wholeSalePrice)
                    </td>
                    <td align="right">
                        <a asp-action="Edit" asp-route-id="@item.baseId"><button type="button" class="btn btn-primary" style=" font-size:12px">Düzenle</button></a>
                        <a asp-action="Details" asp-route-id="@item.baseId"><button type="button" class="btn btn-secondary" style=" font-size:12px">Kaydı Görüntüle</button></a>
                        <a asp-action="Delete" asp-route-id="@item.baseId"><button type="button" class="btn btn-danger" style=" font-size:12px">Sil</button></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
</script>
