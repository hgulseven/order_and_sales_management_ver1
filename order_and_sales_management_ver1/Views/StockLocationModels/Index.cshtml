@model IEnumerable<Order_And_Sales_Management_ver1.Models.stocklocationmodel>

@{
    ViewData["Title"] = "Index";
}

<div class="panel-info">
    <h1>Liste</h1>

    <p>
        <a asp-action="Create">Yeni Kayıt Ekle</a>
    </p>
</div>

<table class="table table-striped table-curved">
    <thead class="badge-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.locationName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.locationName)
            </td>
            <td align="right">
                <a asp-action="Edit" asp-route-id="@item.locationID"><button type="button" class="btn btn-primary">Düzenle</button></a>
                <a asp-action="Details" asp-route-id="@item.locationID"><button type="button" class="btn btn-secondary">Kaydı Görüntüle</button></a>
                <a asp-action="Delete" asp-route-id="@item.locationID"><button type="button" class="btn btn-danger">Sil</button></a>
            </td>
        </tr>
        }
    </tbody>
</table>
