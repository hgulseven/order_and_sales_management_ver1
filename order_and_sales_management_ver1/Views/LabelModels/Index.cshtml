@model IEnumerable<order_and_sales_management_ver1.Models.LabelModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel-info">
    <h1>Etiket Verileri Listesi</h1>
</div>
<div class="alert alert-danger">
    @Html.ValidationSummary(false)
</div>
<hr />
<div class="col-md-2">
     @Html.ActionLink("Ekle/Güncelle", "Create", "LabelModels", new { id = 1 }, new { @class = "btn btn-primary  btn-sm btn-block", @style = "font-size:12px", })
</div>
<div class="col-md-10">
</div>

<table class="table table-striped table-curved" style="font-size:0.7em">
    <colgroup>
        <col style="width:20%">
        <col style="width:10%">
        <col style="width:40%">
        <col style="width:10%">
        <col style="width:5%">
        <col style="width:5%">
        <col style="width:5%">
        <col style="width:5%">
    </colgroup>
    <thead class="table-head">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.productName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productContents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productBarcodID)
            </th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productContents)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productBarcodID)
                </td>
                <td>
                    @Html.ActionLink("Yazdır", "Print", "LabelModels", new { id = item.productID }, new { @class = "btn btn-primary  btn-sm btn-block", @style = "font-size:12px", })
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Create", "LabelModels", new { id = item.productID }, new { @class = "btn btn-secondary  btn-sm btn-block", @style = "font-size:12px", })
                </td>
                <td>
                    @Html.ActionLink("Detaylar", "Details", "LabelModels", new { id = item.productID }, new { @class = "btn btn-secondary  btn-sm btn-block", @style = "font-size:12px", })
                </td>
                <td>
                    @Html.ActionLink("Sil", "Delete", "LabelModels", new { id = item.productID }, new { @class = "btn btn-danger  btn-sm btn-block", @style = "font-size:12px", })
                </td>
            </tr>
        }
    </tbody>
</table>
