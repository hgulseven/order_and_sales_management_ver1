@model IEnumerable<order_and_sales_management_ver1.Models.packedproduct>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel-info">
    <h5>_  PAKETLİ ÜRÜN LİSTESİ</h5>
</div>
<div class="alert alert-danger">
    @Html.ValidationSummary(true)
</div>
<hr />
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th {
        height: 10px;
    }
</style>
<form asp-action="Index">
    <div class="row">
        <div class="col-md-2">
            @Html.ActionLink("Yeni Kayıt", "Create", "packedproducts", new { packedId = 0 }, new { @class = "btn btn-primary  btn-sm btn-block", @style = "font-size:12px" })
        </div>
        <div class="col-md-10">
        </div>
    </div>
        <div class="table-responsive">
            <table class="table table-striped table-curved table-sm" style="font-size:0.9em">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.packedId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.packedProductName)
                        </th>
                        <th align="right">
                            @Html.DisplayNameFor(model => model.productRetailPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.packedProductBarcodeID)
                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                <thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr class="table-row-height">
                        <td>
                            @Html.DisplayFor(modelItem => item.packedId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.packedProductName)
                        </td>
                        <td align="right" style="padding-right:6em" >
                            @Html.DisplayFor(modelItem => item.productRetailPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.packedProductBarcodeID)
                        </td>
                        <td>
                        <td width="75">
                            @Html.ActionLink("Güncelle", "Create", "packedproducts", new { packedId = item.packedId }, new { @class = "btn btn-primary  btn-sm btn-block", @style = "font-size:12px" })
                        </td>
                        <td width="120">
                            @Html.ActionLink("Detaylar", "Details", "packedproducts", new { packedId = item.packedId }, new { @class = "btn btn-primary btn-sm btn-block", @style = "font-size:12px" })
                        </td>
                        <td width="75">
                            @Html.ActionLink("Sil", "Delete", "packedproducts", new { packedId = item.packedId }, new { @class = "btn btn-danger btn-sm btn-block", @style = "font-size:12px" })
                        </td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>
</form>

